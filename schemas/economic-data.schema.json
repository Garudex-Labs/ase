{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ase-protocol.org/schemas/economic-data.schema.json",
  "title": "Economic Data",
  "description": "Economic metadata payload containing agent identity and optional economic components",
  "type": "object",
  "required": ["agentIdentity"],
  "properties": {
    "agentIdentity": {
      "$ref": "agent-identity.schema.json#"
    },
    "costDeclaration": {
      "$ref": "cost-declaration.schema.json#"
    },
    "budgetRequest": {
      "$ref": "budget-request.schema.json#"
    },
    "chargeEvent": {
      "$ref": "charge-event.schema.json#"
    },
    "auditReference": {
      "$ref": "audit-reference.schema.json#"
    },
    "delegationToken": {
      "type": "string",
      "description": "JWT delegation token",
      "pattern": "^[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+$"
    }
  },
  "additionalProperties": false
}
