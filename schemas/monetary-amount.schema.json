{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ase-protocol.org/schemas/monetary-amount.schema.json",
  "title": "Monetary Amount",
  "description": "Monetary value with currency specification",
  "type": "object",
  "required": ["value", "currency"],
  "properties": {
    "value": {
      "type": "string",
      "description": "Decimal string representation of amount",
      "pattern": "^\\d+(\\.\\d{1,10})?$"
    },
    "currency": {
      "type": "string",
      "description": "ISO 4217 currency code",
      "pattern": "^[A-Z]{3}$",
      "examples": ["USD", "EUR", "GBP", "JPY"]
    }
  },
  "additionalProperties": false
}
