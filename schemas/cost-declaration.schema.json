{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ase-protocol.org/schemas/cost-declaration.schema.json",
  "title": "Cost Declaration",
  "description": "Declaration of costs for services or resources",
  "type": "object",
  "required": ["costId", "amount", "pricingModel"],
  "properties": {
    "costId": {
      "type": "string",
      "description": "Unique cost declaration identifier",
      "minLength": 1,
      "maxLength": 255
    },
    "amount": {
      "$ref": "monetary-amount.schema.json#"
    },
    "pricingModel": {
      "type": "string",
      "description": "Pricing model type",
      "enum": ["per_request", "time_based", "resource_based", "tiered", "custom"]
    },
    "description": {
      "type": "string",
      "description": "Optional cost description",
      "maxLength": 1000
    },
    "breakdown": {
      "type": "array",
      "description": "Optional itemized cost breakdown",
      "items": {
        "type": "object",
        "required": ["itemId", "description", "amount"],
        "properties": {
          "itemId": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500
          },
          "amount": {
            "$ref": "monetary-amount.schema.json#"
          },
          "quantity": {
            "type": "number",
            "minimum": 0
          },
          "unitPrice": {
            "$ref": "monetary-amount.schema.json#"
          }
        },
        "additionalProperties": false
      }
    },
    "validUntil": {
      "type": "string",
      "description": "Optional expiration timestamp (ISO 8601)",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "description": "Optional additional metadata",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
