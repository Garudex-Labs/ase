{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ase-protocol.org/schemas/budget-request.schema.json",
  "title": "Budget Request",
  "description": "Request for budget allocation",
  "type": "object",
  "required": ["requestId", "requestedAmount", "budgetCategory", "purpose"],
  "properties": {
    "requestId": {
      "type": "string",
      "description": "Unique request identifier",
      "minLength": 1,
      "maxLength": 255
    },
    "requestedAmount": {
      "$ref": "monetary-amount.schema.json#"
    },
    "budgetCategory": {
      "type": "string",
      "description": "Budget category classification",
      "minLength": 1,
      "maxLength": 255
    },
    "purpose": {
      "type": "string",
      "description": "Purpose description",
      "minLength": 1,
      "maxLength": 1000
    },
    "timeframe": {
      "type": "object",
      "description": "Optional time constraints",
      "required": ["startTime", "endTime"],
      "properties": {
        "startTime": {
          "type": "string",
          "format": "date-time"
        },
        "endTime": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "approvalRequired": {
      "type": "boolean",
      "description": "Whether approval is needed"
    },
    "priority": {
      "type": "string",
      "description": "Optional priority level",
      "enum": ["low", "medium", "high", "critical"]
    },
    "metadata": {
      "type": "object",
      "description": "Optional additional metadata",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
